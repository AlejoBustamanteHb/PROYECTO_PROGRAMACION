@model SistemaVentas.Models.persona

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Agregar Persona</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="input-group col-md-6">
            @Html.LabelFor(model => model.tipo_persona, "Tipo de Persona", new { @class = "input-group-addon" })
            @Html.TextBoxFor(model => model.tipo_persona, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.tipo_persona)
        </div><br /><br />

        <div class="input-group col-md-6">
            @Html.LabelFor(model => model.nombre, "Nombre", new { @class = "input-group-addon" })
            @Html.TextBoxFor(model => model.nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.nombre)
        </div><br /><br />

        <div class="input-group col-md-6">
            @Html.LabelFor(model => model.tipo_documento, "Tipo de Documento", new { @class = "input-group-addon" })
            @Html.TextBoxFor(model => model.tipo_documento, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.tipo_documento)
        </div><br /><br />

        <div class="input-group col-md-6">
            @Html.LabelFor(model => model.num_documento, "Numero de Documento", new { @class = "input-group-addon" })
            @Html.TextBoxFor(model => model.num_documento, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.num_documento)
        </div><br /><br />
        
        <div class="input-group col-md-6">
            @Html.LabelFor(model => model.direccion, "Dirección", new { @class = "input-group-addon" })
            @Html.TextBoxFor(model => model.direccion, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.direccion)
        </div><br /><br />

        <div class="input-group col-md-6">
            @Html.LabelFor(model => model.telefono, "Telefono", new { @class = "input-group-addon" })
            @Html.TextBoxFor(model => model.telefono, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.telefono)
        </div><br /><br />

        <div class="input-group col-md-6">
            @Html.LabelFor(model => model.email, "Correo Electronico", new { @class = "input-group-addon" })
            @Html.TextBoxFor(model => model.email, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.email)
        </div><br /><br />

        
        <div class="input-group col-md-6">
            <input type="submit" value="Agregar" class="btn btn-success" id="btn_submit" />
        </div><br /><br /><br />
    </div>
}

<div class="form-group col-md-6">
    <a href="/Persona/Index" class="btn btn-warning">Regresar</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
