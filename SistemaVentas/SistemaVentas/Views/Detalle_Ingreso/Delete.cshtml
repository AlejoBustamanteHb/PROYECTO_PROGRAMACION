@model SistemaVentas.Models.detalle_ingreso

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>¿Esta seguro de que se desea eliminar el Detalle del Ingreso?</h3>
<div>
    <hr />
    <table class="table table-condensed">
        <tr class="warning">
            <th>Id del Articulo</th>
            <th>Tipo de Comprobante</th>
            <th>Cantidad</th>
            <th>Precio de la Compra</th>
            <th>Precio de la Venta</th>
        </tr>
        <tr class="success">
            <td>@Html.DisplayFor(model => model.articulo.codigo)</td>
            <td>@Html.DisplayFor(model => model.ingreso.tipo_comprobante)</td>
            <td>@Html.DisplayFor(model => model.cantidad)</td>
            <td>@Html.DisplayFor(model => model.precio_compra)</td>
            <td>@Html.DisplayFor(model => model.precio_venta)</td>
        </tr>
    </table>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
             <input type="submit" value="Eliminar" class="btn btn-danger" />
             <a href="/Detalle_Ingreso/Index" class="btn btn-success">Cancelar</a>
        </div>
    }
</div>
