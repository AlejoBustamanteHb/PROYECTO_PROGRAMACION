@model IEnumerable<SistemaVentas.Models.categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @*@Html.ActionLink("Nuevo", "Create", new { @class = "btn btn-success" })*@
   <h2>Listado de Categorias</h2>
    <p><a href="/Categoria/Create" class="btn btn-success">Nuevo</a></p>
</p>
<div class="row">
    <div class="col-log-12 col-md-12 col-sm-12 col-xs-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-condensed table-hover">
                <tr>
                    <th>
                        Nombre de la Categoria
                    </th>
                    <th>
                        Descripción de la Categoria
                    </th>

                    <th>Acción</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.descripcion)
                        </td>

                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.idcategoria }, new { @class = "btn btn-info" }) 
                           @* @Html.ActionLink("Detalles", "Details", new { id = item.idcategoria }, new { @class = "btn btn-info" }) *@
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.idcategoria }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
